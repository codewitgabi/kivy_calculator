#:kivy 2.0.0

<FloatInput>:


<CalculatorButton@Button>:
	text_size: self.size

	font_size: 40
	markup:True
	valign: "middle"
	halign: "center"
	background_color: (1,1,1,1)
	background_normal: ""
	color: (0, 0, 0)
	
	
<CalculatorWidget>:
	spacing: 0
	answer: answer
	
	BoxLayout:
		size: root.size
		orientation: "vertical"
		spacing: 0
		
		FloatInput:
			text: root.input_text
			id: input
			size_hint: 1, .4
			halign: "right"
			multiline: False
			padding: 20, self.height/4, 20, 0
			font_size: 75
			cursor_width: 3
			allow_copy: False
			use_bubble: False
			background_normal: ""
			border: (1,1,1,1)
			background_active: ""
			hint_text: "0"
			hint_text_color: (0,0,0,1)
			cursor_color: (0, 0, 1,1)
			
		Label:
			id: answer
			spacing: 0
			size_hint: 1, .3
			halign: "right"
			text_size: self.size
			valign: "middle"
			padding: 20, 0
			font_size: input.font_size / 2
			color: (0,0,0)
		
		GridLayout:
			cols: 4
			rows: 5
			
			CalculatorButton:
				text: "C"
				color: (0, 0, 1, .8)
				on_press: root.cancel_button(self)
				
			CalculatorButton:
				text: "÷"
				color: (0, 0, 1, .8)
				font_size: 50
				on_press: root.division(self)
				
			CalculatorButton:
				text: "x"
				color: (0, 0, 1, .8)
				on_press: root.multiplication(self)
				
			CalculatorButton:
				text: "DEL"
				color: (0, 0, 1, .8)
				on_press: root.delete(self)
				
			CalculatorButton:
				text: "7"
				on_press: root.seven(self)
				
			CalculatorButton:
				text: "8"
				on_press: root.eight(self)
				
			CalculatorButton:
				text: "9"
				on_press: root.nine(self)
				
			CalculatorButton:
				text: "–"
				color: (0, 0, 1, .8)
				font_size: 50
				on_press: root.subtraction(self)
				
			CalculatorButton:
				text: "4"
				on_press: root.four(self)
				
			CalculatorButton:
				text: "5"
				on_press: root.five(self)
				
			CalculatorButton:
				text: "6"
				on_press: root.six(self)
				
			CalculatorButton:
				text: "+"
				color: (0, 0, 1, .8)
				on_press: root.addition(self)
				
			CalculatorButton:
				text: "1"
				on_press: root.one(self)
				
			CalculatorButton:
				text: "2"
				on_press: root.two(self)
				
			CalculatorButton:
				text: "3"
				on_press: root.three(self)
				
			CalculatorButton:
				text: "="
				color: (0, 0, 1, .8)
				font_size: 50
				on_press: root.equal_to(self)
				
			CalculatorButton:
				text: "%"
				on_press: root.modulus(self)
				
			CalculatorButton:
				text: "0"
				on_press: root.zero(self)
				
			CalculatorButton:
				text: "."
				font_size: 50
				on_press: root.fullstop(self)
				
			CalculatorButton:
				text: "x²"
				color: (0, 0, 1, .8)
				on_press: root.square(self)
			